{
    "ruff.enable": true,
    "ruff.fixAll": false,
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "always",
            "source.fixAll": "explicit",
        }
    },
    "cSpell.words": [
        "autofix",
        "charliermarsh",
        "cmdlen",
        "commitizen",
        "ctty",
        "curframe",
        "endfor",
        "endmacro",
        "endraw",
        "getval",
        "inspectall",
        "interactiveshell",
        "ipython",
        "isort",
        "lasti",
        "madbg",
        "maxcol",
        "mypy",
        "nspect",
        "pdef",
        "pdoc",
        "pinfo",
        "PLAND",
        "postprocessors",
        "preprocessors",
        "ptutils",
        "pygrep",
        "pyproject",
        "pytest",
        "pyupgrade",
        "signum",
        "SIGWINCH",
        "striptags",
        "tcdrain",
        "tcgetattr",
        "topo",
        "varstree",
        "ZhengYu"
    ],
    "cSpell.ignorePaths": [
        "*.lock"
    ]
}
